[core]
	whitespace = tab-in-indent trailing-space cr-at-eol
	eol = lf
	safecrlf = true

[credential]
	helper = cache --timeout=3600

[push]
	default = upstream

[merge]
	conflictstyle = diff3
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
    writeToTemp = true
[mergetool.vimdiff]
	layout = "(BASE / (LOCAL , REMOTE) / MERGED) + MERGED"

[rebase]
	autoSquash = true

[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"

[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true

[commit]
	template = ~/.gitmessage
