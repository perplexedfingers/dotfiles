[push]
	default = upstream
[core]
	trustctime = false
	editor = nvim
	filemode = true
	autocrlf = input
	eol = lf
	safecrlf = true
[color]
	ui = true
	interactive = auto
[credential]
	helper = cache --timeout=3600
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = true
	trustexitcode = false
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"
[user]
	email = ray-chen-ting.zhu@hpe.com
	name = Ray Zhu
[commit]
	template = ~/.gitmessage
[diff]
	tool = vimdiff
	algorithm = histogram
[difftool]
	prompt = false
[rebase]
	autoSquash = true
