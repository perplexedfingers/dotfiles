[core]
    whitespace = tab-in-indent trailing-space cr-at-eol
	eol = lf
	safecrlf = true

[credential]
	helper = cache --timeout=3600

[push]
	default = upstream

[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = true
	trustexitcode = false

[diff]
    colorMoved = default
	colorMovedWS = allow-indentation-change

[rebase]
	autoSquash = true

[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"

[color "diff"]
    whitespace = black strike white
	# TODO not showing whitespace error in git-delta
[pager]
	diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
	  diffFilter = delta --color-only --features=interactive
[delta "interactive"]
    keep-plus-minus-markers = false
[delta]
	# inspect-raw-lines = false  # when diff.colorMoved to detect moved chunk
	# # fix possible git-delta error
	features = line-numbers files hunks commits
    navigate = true
	dark = true
[delta "line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-left-style = blue
    line-numbers-right-format = "{np:>4}│"
    line-numbers-right-style = blue
[delta "files"]
    zero-style = syntax
    file-style = bold yellow ul
    file-decoration-style = none
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
[delta "hunks"]
    hunk-header-style = file line-number syntax
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-decoration-style = blue box
[delta "commits"]
    commit-style = raw
    commit-decoration-style = bold yellow box ul
